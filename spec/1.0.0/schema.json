{
  "$id": "https://schemas.bench.ci/environments/1.0.0",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environments Schema",
  "description": "JSON Schema for environment descriptions",
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "\\bv?(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)(?:-[\\da-z-]+(?:\\.[\\da-z-]+)*)?(?:\\+[\\da-z-]+(?:\\.[\\da-z-]+)*)?\\b"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "os"
        ],
        "properties": {
          "name": {
            "$ref": "#/definitions/nonEmptyString"
          },
          "architecture": {
            "type": "string",
            "default": "amd64",
            "enum": [
              "amd64",
              "i386"
            ]
          },
          "cpu": {
            "type": "integer",
            "minimum": 1,
            "default": 2
          },
          "memory": {
            "type": "integer",
            "minimum": 1,
            "default": 100
          },
          "disk": {
            "type": "object",
            "properties": {
              "size": {
                "type": "integer",
                "minimum": 1,
                "default": 100
              },
              "class": {
                "type": "string",
                "default": "ssd",
                "enum": [
                  "hdd",
                  "ssd",
                  "sshd"
                ]
              },
              "filesystem": {
                "type": "string",
                "enum": [
                  "apfs",
                  "ext2",
                  "ext3",
                  "ext4",
                  "fat16",
                  "fat32",
                  "ntfs",
                  "tmpfs"
                ]
              }
            }
          },
          "os": {
            "type": "object",
            "required": [
              "name",
              "version"
            ],
            "properties": {
              "name": {
                "$ref": "#/definitions/nonEmptyString"
              },
              "version": {
                "$ref": "#/definitions/nonEmptyString"
              }
            }
          },
          "env": {
            "type": "object",
            "uniqueItems": true
          }
        }
      }
    }
  }
}
