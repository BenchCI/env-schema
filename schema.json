          "family"
        ],
        "properties": {
          "family": {
            "type": "string",
            "enum": [
              "linux"
            ]
          }
        }
      },
      "environment": {
        "type": "object",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string"
        }
      },
      "hardware": {
        "type": "object",
        "required": [
          "architecture",
          "cpu",
          "memory"
        ],
        "properties": {
          "architecture": {
            "type": "string",
            "enum": [
              "x64"
            ]
          },
          "network": {
            "type": "object"
          },
          "disk": {
            "type": "object",
            "properties": {
              "class": {
                "type": "string",
                "enum": [
                  "ssd"
                ]
              }
            }
          },
          "memory": {
            "type": "object",
            "required": [
              "size",
              "units"
            ],
            "properties": {
              "size": {
                "type": "integer"
              },
              "units": {
                "type": "string",
                "enum": [
                  "Gb"
                ]
              }
            }
          }
        }
      }
    }
  }],
  "definitions": {
  }
}
